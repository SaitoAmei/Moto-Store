
@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Home</title>
 
</head>

<body>
    <h2>Index</h2>
    <form method="post">
        <input type="text" name="Query" />
        <button type="submit">Search</button>
        <style>
            p {
                padding-left: 60px;
            }
        </style>
    </form>

    <table>

        <tr>
            <th><p>Id</p></th>
            <th><p>Model</p></th>
            <th><p>Producer</p></th>
            <th><p>Max speed</p></th>
            <th><p>Speed</p></th>

        </tr>
        @foreach (var b in ViewBag.Motos)
        {
            <tr>
                <td><p>@b.Id</p></td>
                <td><p>@b.Model</p></td>
                <td><p>@b.Producer</p></td>
                <td><p>@b.MaxSpeed</p></td>
                <td><p>@b.Price</p></td>
                <td><p><a href="/Home/Buy/@b.Id">Купить</a></p></td>
            </tr>
        }
    </table>
 
</body>



</html>